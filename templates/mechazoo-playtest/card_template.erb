<html>
    <head>
        <link rel="stylesheet" href="data:text/css;base64,<%= css_data %>" />
    </head>
    <body>
        <div id="card-frame-outer">
            <div id="card-image-container">
                <img />
            </div>
            <div id="card-frame-inner">
                <% if defined? activation_energy_cost %>
                    <div id="scrap-value-box">
                        <p><%= activation_energy_cost %></p>
                    </div>
                <% end %>
                <% if defined? cardname %>
                <div id="cardname-box" <%= "class=\"center\"" if cardtype == 'mech' %>>
                    <%# this fills the card name area at the top of the example image %>
                    <p><%= cardname %></p>
                </div>
                <% end %>
                <% if defined? play_scrap_cost %>
                    <div id="energy-frame">
                        <%# this fills the top-left box in the example image.%>
                        <p><%= play_scrap_cost %></p>
                    </div>
                    <% if defined? cardtype %>
                        <% unless cardtype == 'mech' %>
                            <div id="card-type-box">
                                <% case cardtype when 'action' %>
                                    <p>!</p>
                                <% when 'part' %>
                                    <p>@</p>
                                <% when 'crew' %>
                                    <p>$</p>
                                <% else %>
                                    <p><%=cardtype%></p>
                                <% end %>
                            </div>
                        <% else %>
                            <div id="energy-capacity">
                                <p><%= energy_capacity %></p>
                            </div>
                            <div id="scrap-per-turn">
                                <p><%= scrap_per_turn %>
                            </div>
                        <% end %>
                    <% end %>
                <% end %>
                <div id="card-text-box">
                    <% if defined? typeline %>
                    <div id="typeline-box">
                        <p><%= typeline %></p>
                    </div>
                    <% end %>
                    <% if defined? limit %>
                        <p>Limit <%= limit %></p>
                    <% end %>
                    <% if defined? text %>
                        <% if defined? text_size %>
                            <% if text_size == 'larger' %>
                                <p class="extra_large"><%= text.gsub(/<\/?p>/, '').strip %></p>
                            <% elsif text_size == 'large' %>
                                <p class="large"><%= text.gsub(/<\/?p>/, '').strip %></p>
                            <% else %>
                                <p> <%= text %></p>
                            <% end %>
                        <% else %>
                            <p> <%= text %></p>
                        <% end %>
                    <% end %>
                </div>
                <% if defined? durability_base %>
                    <div id="durability_base_box" <%= 'class="mech"' if cardtype == 'mech' %>>
                        <p><%= durability_base %></p>
                    </div>
                <% end %>
            </div>
        </div>
    </body>
</html>